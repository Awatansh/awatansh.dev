{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/src"],
  "testMatch": ["**/__tests__/**/*.test.ts", "**/*.test.ts"],
  "moduleFileExtensions": ["ts", "js", "json"],
  "extensionsToTreatAsEsm": [".ts"],
  "moduleNameMapper": {
    "^@portfolio/shared$": "<rootDir>/../shared/src/index.ts"
  },
  "transform": {
    "^.+\\.tsx?$": ["ts-jest", {
      "useESM": true
    }]
  },
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/**/index.ts"
  ]
}
